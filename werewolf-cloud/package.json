{
  "name": "werewolf-cloud",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bunx wrangler@latest dev --local --config wrangler.dev.toml --port 8787 --persist-to .wrangler/state",
    "typecheck": "tsc --build",
    "lint": "bun run lint:oxlint",
    "lint:oxlint": "oxlint --allow all --deny @typescript-eslint/no-explicit-any --tsconfig ./tsconfig.json apps/api/src packages/domain/src scripts",
    "test": "vitest --run --watch=false --config config/vitest.config.ts",
    "check": "bun run typecheck && bun run lint && bun run test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@hono/zod-validator": "^0.2.1",
    "@vitest/coverage-v8": "^2.1.4",
    "miniflare": "^3.20240925.0",
    "oxlint": "^1.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "wrangler": "^4.30.0",
    "zod": "^3.23.8"
  }
}
